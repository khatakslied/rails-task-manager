<h1>Tasks#index</h1>
<ul>
<% @tasks.each do |task| %>
<li>
  <% if task.completed %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
  <%= link_to task.title, task_path(task) %>
  <%= link_to task_path(task), method: :delete, data: { confirm: "Do you really want to delete '#{task.title}'" } do %>
      <i class="far fa-trash-alt"></i>
  <% end %>
</li>
<% end %>
</ul>

<p><%= link_to 'Create new task', new_task_path %></p>
